@model ISummationPOC.Request.CreateUserRequest

<h2 class="page-title">Create User</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<!-- Form starts here -->
<form asp-controller="User" asp-action="CreateUser" method="post" enctype="multipart/form-data" class="create-form">

    <!-- Validation Summary to display all errors at once -->
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <!-- First Name -->
    <div class="form-group">
        <label asp-for="User.FirstName" class="control-label">Firstname</label>
        <input asp-for="User.FirstName" class="form-control input-field" placeholder="e.g., John" />
        <span asp-validation-for="User.FirstName" class="text-danger"></span>
    </div>

    <!-- Last Name -->
    <div class="form-group">
        <label asp-for="User.LastName" class="control-label">Lastname</label>
        <input asp-for="User.LastName" class="form-control input-field" placeholder="e.g., Doe" />
        <span asp-validation-for="User.LastName" class="text-danger"></span>
    </div>

    <!-- User Type -->
    <div class="form-group">
        <label asp-for="User.UserTypeId" class="control-label">Usertype</label>
        <select asp-for="User.UserTypeId" class="form-control input-field" asp-items="ViewBag.UserTypes">
            <option value="">-- Select User Type --</option>
        </select>
        <span asp-validation-for="User.UserTypeId" class="text-danger"></span>
    </div>

    <!-- Email -->
    <div class="form-group">
        <label asp-for="User.Email" class="control-label">Email</label>
        <input asp-for="User.Email" class="form-control input-field" placeholder="e.g., example@example.com" />
        <span asp-validation-for="User.Email" class="text-danger"></span>
    </div>

    <!-- Mobile -->
    <div class="form-group">
        <label asp-for="User.Mobile" class="control-label">Mobile</label>
        <input asp-for="User.Mobile" class="form-control input-field" placeholder="e.g., 1234567890" />
        <span asp-validation-for="User.Mobile" class="text-danger"></span>
    </div>

    <!-- Date of Birth -->
    <div class="form-group">
        <label asp-for="User.UserDateOfBirth" class="control-label">Date of Birth</label>
        <input asp-for="User.UserDateOfBirth" class="form-control input-field" type="date" />
        <span asp-validation-for="User.UserDateOfBirth" class="text-danger"></span>
    </div>

    <!-- User Name -->
    <div class="form-group">
        <label asp-for="User.UserName" class="control-label">Username</label>
        <input asp-for="User.UserName" class="form-control input-field" placeholder="Enter username" />
        <span asp-validation-for="User.UserName" class="text-danger"></span>
    </div>

    <!-- Profile Image -->
    <div class="form-group">
        <label class="control-label">Profile image</label>
        <input name="image" type="file" class="form-control-file" />
        <span asp-validation-for="User.ProfileImage" class="text-danger"></span>
    </div>

    <!-- Submit and Cancel Buttons -->
    <div class="form-group form-buttons">
        <button type="submit" class="btn btn-primary btn-submit">Create</button>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary btn-cancel">
            <i class="fas fa-times-circle"></i> Cancel
        </a>
    </div>
</form>

<!-- Include Validation Scripts -->
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<!-- Styling -->
<style>
    .page-title {
        font-size: 28px;
        color: #4CAF50;
        text-align: center;
        margin-bottom: 20px;
        font-weight: bold;
        text-transform: uppercase;
    }

    .create-form {
        max-width: 600px;
        margin: 0 auto;
        background-color: #f9f9f9;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 20px;
    }

    .input-field {
        border-radius: 5px;
        border: 1px solid #ccc;
        padding: 10px;
        font-size: 14px;
        transition: border-color 0.3s ease;
    }

        .input-field:focus {
            border-color: #4CAF50;
            outline: none;
        }

    .form-group label {
        font-weight: bold;
        color: #333;
    }

    .form-buttons {
        text-align: center;
    }

    .btn-submit {
        background: linear-gradient(45deg, #4CAF50, #81C784);
        color: white;
        border-radius: 50px;
        padding: 10px 30px;
        font-size: 18px;
        text-transform: uppercase;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: background 0.3s ease, transform 0.2s ease;
    }

        .btn-submit:hover {
            background: linear-gradient(45deg, #81C784, #4CAF50);
            transform: translateY(-3px);
        }

        .btn-submit:active {
            transform: translateY(2px);
        }

    .btn-cancel {
        background-color: #ddd;
        padding: 12px 20px;
        border-radius: 5px;
        font-size: 16px;
        color: #333;
        text-decoration: none;
        display: inline-block;
        margin-left: 10px;
        transition: background-color 0.3s ease;
    }

        .btn-cancel:hover {
            background-color: #bbb;
        }

    .form-control-file {
        border-radius: 5px;
        padding: 8px;
    }

    .alert {
        padding: 15px;
        background-color: #dff0d8;
        border: 1px solid #d0e9c6;
        color: #3c763d;
        border-radius: 5px;
        margin-bottom: 20px;
    }
</style>

<!-- Font Awesome CDN for icons -->
<script src="https://kit.fontawesome.com/a076d05399.js"></script>
